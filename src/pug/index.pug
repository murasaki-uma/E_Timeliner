html
    head
        include ./parts/head

    body
        .contoller
            .duration
                .h
                    input#hour.durationValues(type="number", value="0")
                    p hours
                p :
                .m
                    input#min.durationValues(type="number", value="4")
                    p mins
                p :
                .s
                    input#sec.durationValues(type="number", value="10")
                    p secs
                p :
                .f
                    input#frame.durationValues(type="number", value="30")
                    p frames
            .timeline_time
                p.timeline_h 00
                p :
                p.timeline_m 00
                p :
                p.timeline_s 00
                p :
                p.timeline_f 00

            input#playButton.play(type="button", value="PLAY")
            input#stopButton(type="button", value="stop")
            input#volume(type="range", value="-50",max="0", min="-100")
        .timelines
            #timelineScale
            #timeline
            #drawing
        .editFragValue
            p.flagValueDebug
            input.inputFlagValue(type="text", value='{"name":"value"}')
